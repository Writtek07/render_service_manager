<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Service Name</th>
      <th>Service ID</th>
      <th colspan="2">Actions</th>    
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service["service"]["name"] %></td>
        <td><%= service["service"]["id"] %></td>
        <td>
            <div class="btn-group">
                <%= button_to "Start", { action: :start_service, id: service["service"]["id"] }, method: :post %>
                <%= button_to "Stop", { action: :stop_service, id: service["service"]["id"] }, method: :post %>
            </div>            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
